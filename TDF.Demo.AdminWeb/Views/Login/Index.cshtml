
@{
    Layout = null;
    var goUrl = ViewBag.GoUrl as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>TDF | 登录</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/Scripts/t2m_adminlte/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/t2m_adminlte/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Scripts/t2m_adminlte/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Scripts/t2m_adminlte/dist/css/AdminLTE.min.css">
    <!-- Bootstrap toastr 浮动提示框 -->
    <link href="~/Scripts/t2m_adminlte/bower_components/bootstrap-toastr/toastr.min.css" rel="stylesheet" />
    <!-- iCheck -->
    @*<link rel="stylesheet" href="~/Scripts/t2m_adminlte/plugins/iCheck/square/blue.css">*@
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <a href="javascript:;"><b>T2Mobile</b>后台系统</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg text-red" style="text-align: left;"></p>
        <form id="defaultForm" class="login-form" action="@Url.Action("Login")" method="post">
            <div class="form-group has-feedback">
                <input id="LoginName" name="LoginName" type="text" class="form-control" placeholder="账号" required>
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input id="Password" name="Password" type="password" class="form-control" placeholder="密码" required>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <img id="img_verifyCode" alt="看不清？换一张" src="@Url.Action("GetAuthCode")" style="width: 90px; height: 34px; cursor: pointer; border: 1px solid #d2d6de;" onclick="getVerifyCode(this)"/>
                    </div>
                    <div class="col-md-8">
                        <input id="verifyCode" name="verifyCode" class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="验证码" value="" required/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    @*<button id="my_toast" type="button" class="btn btn-primary btn-block btn-flat">浮动提示</button>*@
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">登 录</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
    <!-- /.login-box-body -->
</div>
    <input type="hidden" id="IndexUrl" value="@(string.IsNullOrEmpty(goUrl)?Url.Action("Index","Home"):goUrl)" />
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/t2m_adminlte/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/t2m_adminlte/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- jQuery-Validation 1.14.0 -->
    <script src="~/Scripts/t2m_adminlte/bower_components/jquery-validation/js/jquery.validate.min.js"></script>
    <!-- Bootstrap toastr 浮动提示框 -->
    <script src="~/Scripts/t2m_adminlte/bower_components/bootstrap-toastr/toastr.min.js"></script>
    <script src="~/Scripts/t2m_adminlte/js/Custom.js"></script>
<script>
    var $goUrl = '@(string.IsNullOrEmpty(goUrl)?"":"s") ';
    var getVerifyCode = function(obj) {
        $(obj).attr("src", "@Url.Action("GetAuthCode")" + "?p=" + Math.random() * 20);
    };
</script>
    <script src="~/Scripts/t2m_adminlte/js/login.js"></script>
</body>
</html>
